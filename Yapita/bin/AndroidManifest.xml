        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BienvenidoActivity"
            android:label="@string/title_activity_bienvenido" >
        </activity>
        <activity
            android:name=".TabsPrincipalActivity"
            android:label="@string/title_activity_tabs_principal"
            android:theme="@style/Theme.Mistyle" >
        </activity>
        <activity
            android:name=".TabCostumbresActivity"
            android:label="@string/title_activity_tab_costumbres" >
        </activity>
    </application>

</manifest>
