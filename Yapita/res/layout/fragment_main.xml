<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:id="@string/fragmento_main"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yapita.app.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/altTxtLogin" >

        <EditText
            android:id="@+id/txtCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/caja_texto"
            android:drawableLeft="@drawable/usuario"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/altTxtLogin"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/txtClave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/caja_texto"
            android:drawableLeft="@drawable/clave"
            android:ems="10"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="@dimen/anchoBtnLogin"
            android:layout_height="@dimen/altBtnLogin"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_login"
            android:onClick="login" />

    </LinearLayout>

</LinearLayout>